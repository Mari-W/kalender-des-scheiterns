{% include 'header.twig' %}

{% if message != "" %}
    <div class="card events-card"><b>{{ message }}</b></div>
{% endif %}

 {% if dates|length < 1 %}
     <div>
         <p id="noevents" style="color: #cf2e78; size: 22px; margin-top: 20px; font-family: 'Roboto Slab', serif;"><b>Aktuell sind noch keine Ereginisse eingetragen! :(</b></p>
     </div>
 {% endif %}

{% for e in dates %}
    <div style="text-align: justify">
        <p id="{{ e.date|date("dd.MM")|replace({'0': ''}) }}" style="color: #cf2e78; size: 22px; margin-top: 20px; font-family: 'Roboto Slab', serif;"><b>{{ e.date|date("dd.MM.yyyy") }}</b></p>
        <p class="events-type">{% if e.type == "HISTORIC" %} HISTORISCH {% else %} PERSÃ–NLICH {% endif %}</p>
        <p class="events-type-entry">
            {{ e.description }}
            <br>
            von: {{ e.name }}
        </p>
        <hr>
    </div>
{% endfor %}

{% include 'footer.twig' %}
